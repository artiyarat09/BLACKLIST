<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu1">

    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView23"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="85dp"
        app:button_icon="@drawable/search"
        app:button_icon_height="80dp"
        app:button_icon_width="80dp"
        app:expandable_area_color="#FF0000"
        app:hide_text="ค้นหารายชื่อ"
        app:hide_text_color="@android:color/white"
        app:hide_text_size="10dp"
        app:icon_button_color="#FF0000"
        app:magic_button_size="105dp">

    </br.com.bloder.magic.view.MagicButton>

    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/about1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/protect1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        app:button_icon="@drawable/b4"
        app:button_icon_height="80dp"
        app:button_icon_width="80dp"
        app:expandable_area_color="#87CEFA"
        app:hide_text="เกี่ยวกับเรา"
        app:hide_text_color="@android:color/white"
        app:hide_text_size="10dp"
        app:icon_button_color="#87CEFA"
        app:magic_button_size="105dp">

    </br.com.bloder.magic.view.MagicButton>

    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/protect1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/beware"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        app:button_icon="@drawable/bs3"
        app:button_icon_height="80dp"
        app:button_icon_width="80dp"
        app:expandable_area_color="#87CEFA"
        app:hide_text="วิธีป้องกัน"
        app:hide_text_color="@android:color/white"
        app:hide_text_size="10dp"
        app:icon_button_color="#87CEFA"
        app:magic_button_size="105dp">

    </br.com.bloder.magic.view.MagicButton>

    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/beware"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/search"
        app:button_icon="@drawable/b2"
        app:button_icon_height="80dp"
        app:button_icon_width="80dp"
        app:expandable_area_color="#FF0000"
        app:hide_text=" รายชื่อทั้งหมด"
        app:hide_text_color="@android:color/white"
        app:hide_text_size="10dp"
        app:icon_button_color="#FF0000"
        app:magic_button_size="105dp">

    </br.com.bloder.magic.view.MagicButton>

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="BLACKLIST เมนู"
        android:textSize="30sp" />

</RelativeLayout>